<table id='images'>
  <thead>
  <tr>
    <th>Предпросмотр</th>
    <th>Удалить</th>
  </tr>
  </thead>
  <tbody>
  <% @gallery_event.images.each do |image|-%>
      <tr>
        <td><img src="<%=image.path.url(:thumb)%>"></td>
        <td><a class='delete-image' href='#'>Удалить</a><input class="image-id" value="<%=image.id%>" style="display:none" ></td>
      </tr>
  <% end -%>
  </tbody>
</table>
<div id="my_file_uploader"></div>
<script type="text/javascript">
    var uploader = new qq.FileUploader({
        element: document.getElementById('my_file_uploader'),
        action: '<%= add_files_admin_gallery_event_path(@gallery_event) %>',
        params: { "authenticity_token": "<%= form_authenticity_token %>" },
        customHeaders: { "X-File-Upload": "true" }
    });
</script>