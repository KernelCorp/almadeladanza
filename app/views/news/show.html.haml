- content_for :gradient do
  .gradient

- content_for :left_panel do
  %p
    Новости
  - @news.each do |news|
    #news_block
      #news_time
        = news.created_at.strftime("%m.%d.%Y")
      - if news.id == @one.id
        #current_news_title
          = news.title
        #current_news_underline
      - if news.id != @one.id
        #news_title
          = news.title
        #news_details
          %a{href: '/news/' + news.id.to_s}Подробнее

- content_for :right_panel do
  #news_text
    = raw @one.text
